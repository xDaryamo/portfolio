---
import { getCollection } from 'astro:content';
import { Icon } from 'astro-icon/components';
import Markdown from '../Markdown.astro';

const education = (await getCollection('education'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<section id="education" class="section">
  <h2 class="section-title">Education</h2>
  <div class="education-group">
    {
      education.map((edu) => {
        const isLink = edu.data.url && edu.data.url !== '#';
        return (
          <div class="education-card group">
            <div class="grid-layout">
              <div class="range-container">
                <span class="range">{edu.data.range}</span>
                {edu.data.location && <p class="location">{edu.data.location}</p>}
              </div>
              <div class="content-col">
                <h3 class="edu-header">
                  {isLink ? (
                    <a href={edu.data.url} target="_blank" rel="noreferrer" class="edu-link">
                      <span class="degree">
                        {edu.data.degree}
                        <Icon name="heroicons:arrow-up-right-20-solid" class="link-icon" />
                      </span>
                      <span class="institution">{edu.data.institution}</span>
                    </a>
                  ) : (
                    <>
                      <span class="degree">{edu.data.degree}</span>
                      <span class="institution">{edu.data.institution}</span>
                    </>
                  )}
                </h3>
                {edu.data.summary && <p class="summary"><Markdown content={edu.data.summary} /></p>}
                <div class="achievements">
                  {edu.data.achievements.map((item) => (
                    <p><Markdown content={item} /></p>
                  ))}
                </div>
              </div>
            </div>
          </div>
        );
      })
    }
  </div>
</section>

<style>
  .education-group {
    display: flex;
    flex-direction: column;
    gap: 1rem; /* Space between cards */
  }

  .education-card {
    position: relative;
    display: block;
    text-decoration: none;
    color: inherit;
    padding: 1.5rem;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
    overflow: hidden;
    background: transparent;
    border: 1px solid transparent;
  }

  .education-card:hover {
    background-color: rgba(255, 255, 255, 0.03);
    box-shadow: 0 4px 20px -5px rgba(0, 0, 0, 0.3);
    border-color: rgba(255, 255, 255, 0.05);
  }

  div.education-card {
    cursor: default;
  }

  /* Layout */
  .grid-layout {
    position: relative; /* Above spotlight */
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.5rem;
    align-items: start;
  }

  @media (min-width: 640px) {
    .grid-layout {
      grid-template-columns: 150px 1fr; /* Increased width for date/location */
      gap: 1.5rem;
    }
  }

  .range-container {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .range {
    padding-top: 0.2rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    line-height: 1.2;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--slate);
    transition: color 0.2s;
  }

  .education-card:hover .range {
    color: var(--lightest-slate);
  }

  .location {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--slate);
    margin: 0;
    transition: color 0.2s;
  }

  .education-card:hover .location {
    color: var(--light-slate);
  }

  /* Content Column */
  .edu-header {
    margin: 0;
    padding: 0;
    font-size: 1.1rem;
    font-weight: 600;
    line-height: 1.2;
    color: var(--lightest-slate);
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    margin-bottom: 0.5rem;
  }

  .edu-header .degree {
    color: var(--lightest-slate);
    display: inline;
  }

  .edu-link {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .link-icon {
    display: inline-block;
    width: 1.25rem;
    height: 1.25rem;
    margin-left: 0.3rem;
    transition: all 0.2s ease;
    color: var(--slate);
    vertical-align: middle;
    opacity: 0.7;
    flex-shrink: 0;
    margin-bottom: 0.2rem;
  }

  .edu-link:hover .link-icon {
    color: var(--green);
    opacity: 1;
    transform: translateY(-3px);
  }

  .edu-link .institution {
    color: var(--green);
  }

  /* Stretched link to make the whole card clickable */
  .edu-link::after {
    content: '';
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  /* Ensure nested links are clickable by putting them above the stretched link */
  .summary a,
  .achievements a {
    position: relative;
    z-index: 10;
    color: var(--green);
    text-decoration: none;
  }

  .summary a:hover,
  .achievements a:hover {
    text-decoration: underline;
  }

  .summary {
    font-size: 1rem;
    color: var(--slate);
    margin-bottom: 0.5rem;
    line-height: 1.5;
    position: relative;
    z-index: 1;
  }

  .achievements {
    margin: 0 0 1rem 0;
    padding: 0;
    position: relative;
    z-index: 1;
  }

  .achievements p {
    position: relative;
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
    color: var(--slate);
    line-height: 1.5;
  }
</style>
