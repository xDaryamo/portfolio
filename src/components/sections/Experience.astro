---
import { jobs } from '../../data/experience';
import { Icon } from 'astro-icon/components';
import Markdown from '../Markdown.astro';
---

<section id="experience" class="section">
  <div class="experience-group">
    {
      jobs.map((job) => {
        const isLink = job.url && job.url !== '#';
        return (
          <div class="experience-card group">
            <div class="grid-layout">
              <div class="range-container">
                <span class="range">{job.range}</span>
                <p class="location">{job.location}</p>
              </div>
              <div class="content-col">
                <h3 class="job-header">
                  {isLink ? (
                    <a href={job.url} target="_blank" rel="noreferrer" class="job-link">
                      <span class="title">
                        {job.title}
                        <Icon name="heroicons:arrow-up-right-20-solid" class="link-icon" />
                      </span>
                      <span class="company">{job.company}</span>
                    </a>
                  ) : (
                    <>
                      <span class="title">{job.title}</span>
                      <span class="company">{job.company}</span>
                    </>
                  )}
                </h3>
                <p class="summary">
                  <Markdown content={job.summary} />
                </p>
                <ul class="achievements">
                  {job.achievements.map((item) => (
                    <li>
                      <Markdown content={item} />
                    </li>
                  ))}
                </ul>
                <div class="tech-pills">
                  {job.tech.map((tech) => (
                    <span class="pill">{tech}</span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        );
      })
    }
  </div>
</section>

<style>
  .experience-group {
    display: flex;
    flex-direction: column;
    gap: 1rem; /* Space between cards */
  }

  .experience-card {
    position: relative;
    display: block;
    text-decoration: none;
    color: inherit;
    padding: 1.5rem;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
    overflow: hidden;
    background: transparent;
    border: 1px solid transparent;
  }

  .experience-card:hover {
    background-color: rgba(255, 255, 255, 0.03);
    box-shadow: 0 4px 20px -5px rgba(0, 0, 0, 0.3);
    border-color: rgba(255, 255, 255, 0.05);
  }

  div.experience-card {
    cursor: default;
  }

  /* Layout */
  .grid-layout {
    position: relative; /* Above spotlight */
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.5rem;
    align-items: start;
  }

  @media (min-width: 640px) {
    .grid-layout {
      grid-template-columns: 150px 1fr; /* Increased width for date/location */
      gap: 1.5rem;
    }
  }

  .range-container {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .range {
    padding-top: 0.2rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    line-height: 1.2;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--slate);
    transition: color 0.2s;
  }

  .experience-card:hover .range {
    color: var(--lightest-slate);
  }

  .location {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--slate);
    margin: 0;
    transition: color 0.2s;
  }

  .experience-card:hover .location {
    color: var(--light-slate);
  }

  /* Content Column */
  .job-header {
    margin: 0;
    padding: 0;
    font-size: 1.1rem;
    font-weight: 600;
    line-height: 1.2;
    color: var(--lightest-slate);
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    margin-bottom: 0.5rem;
  }

  .job-header .title {
    color: var(--lightest-slate);
    display: inline;
  }

  .job-link {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .link-icon {
    display: inline-block;
    width: 1.25rem;
    height: 1.25rem;
    margin-left: 0.3rem;
    transition: all 0.2s ease;
    color: var(--slate);
    vertical-align: middle;
    opacity: 0.7;
    flex-shrink: 0;
    margin-bottom: 0.2rem;
  }

  .job-link:hover .link-icon {
    color: var(--green);
    opacity: 1;
    transform: translateY(-3px);
  }

  .job-link .company {
    color: var(--green);
  }

  /* Stretched link to make the whole card clickable */
  .job-link::after {
    content: '';
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  /* Ensure nested links are clickable by putting them above the stretched link */
  .summary a,
  .achievements a {
    position: relative;
    z-index: 10;
    color: var(--green);
    text-decoration: none;
  }

  .summary a:hover,
  .achievements a:hover {
    text-decoration: underline;
  }

  .summary {
    font-size: 1rem;
    color: var(--slate);
    margin-bottom: 1rem;
    line-height: 1.5;
    position: relative;
    z-index: 1;
  }

  .achievements {
    margin: 0 0 1rem 0;
    padding: 0;
    list-style: none;
    position: relative;
    z-index: 1;
  }

  .achievements li {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
    color: var(--slate);
  }

  .achievements li::before {
    content: 'â–¹';
    position: absolute;
    left: 0;
    color: var(--green);
    line-height: 1.2;
  }

  /* Tech Pills */
  .tech-pills {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .pill {
    background-color: rgba(100, 255, 218, 0.1);
    color: var(--green);
    font-family: var(--font-mono);
    font-size: 0.75rem;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px; /* Fully rounded */
    transition: color 0.2s, background-color 0.2s;
  }
  
  .experience-card:hover .pill {
      background-color: rgba(100, 255, 218, 0.15);
  }
</style>