---
import BaseLayout from './BaseLayout.astro';
import Sidebar from '../components/Sidebar.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <div class="home-container">
    <Sidebar />
    <main class="main-content">
      <slot />
      
      <footer class="footer">
        <p>Built with Astro & Designed inspired by <a href="https://brittanychiang.com/" target="_blank" rel="noopener noreferrer">Brittany Chiang</a>.</p>
      </footer>
    </main>
  </div>
</BaseLayout>

<style>
  .home-container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    max-width: 1200px;
    margin: 0 auto;
  }

  .main-content {
    padding: 2rem 1.5rem 2rem;
    flex: 1;
  }

  .footer {
    margin-top: 4rem;
    padding: 2rem 0;
    text-align: center;
    font-size: 0.8rem;
    color: var(--slate);
  }

  @media (min-width: 1024px) {
    .home-container {
      flex-direction: row;
      justify-content: space-between;
      gap: 2rem;
    }

    .main-content {
      width: 65%;
      padding: 5.5rem 0;
      margin-left: auto;
    }
  }

  @media (min-width: 1024px) and (max-height: 900px) {
    .main-content {
      padding: 4vh 0;
    }
  }

  @media (min-width: 1024px) and (max-height: 700px) {
    .main-content {
      padding: 2vh 0;
    }
  }
</style>
